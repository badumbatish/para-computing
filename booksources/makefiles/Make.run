info ::
	@echo "make runs : compile and run everything and generate output file"
.PHONY: runs
MPIRUN  = mpiexec
NP = 3
runs :
	@for r in ${RUNS} ; do \
	    echo "---------------- Test run: $$r ----------------" \
	     && runname=$${r##run_} \
	     && make $$r \
	           EXTRALIBS=${EXTRALIBS} OPTIONS=${OPTIONS} OPTLEVEL=${OPTLEVEL} \
	           NP=${NP} \
	        2>&1 | tee $$runname.runout \
	 ; done
total_clean ::
	@rm -f *.runout

